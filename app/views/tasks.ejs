<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="css/tasks.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">COMP308</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if(title == "Home") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>

            <a class="nav-link" href="/"
              ><i class="fa fa-home"></i> Home
              <span class="sr-only">(current)</span></a
            >
          </li>

          <% if(title == "Survey") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>

            <a class="nav-link" href="/tasks"
              ><i class="fa fa-lg fa-info"></i> Survey</a
            >
          </li>
        </ul>
      </div>
    </nav>

<div class="container">
  <h2>Survey Lists</h2>
  <p></p>            
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Survey ID</th>
        <th>Game Genre</th>
        <th>Game Played Per Year</th>
        <th>Age</th>
      </tr>
    </thead>
    
    <tbody>
     <% tasks.forEach(function(task){ %>
     <form method="post" action="/list_tasks/<%= task.taskId %>?_method=PUT">
<tr>
                    <td>
                        <div>
                            <input type="text" name="taskId" value="<%= task.taskId %>" />
                            <input type="hidden" name="originalTaskId" value="<%= task.taskId %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="text" name="gameGenre" value="<%= task.gameGenre %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="text" name="gamePlayedPerYear" value="<%= task.gamePlayedPerYear %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="text" name="age" value="<%= task.age %>" />
                        </div>
                    </td>
                    <td>   
                        <div>
                            <input type="submit" class="btn btn-primary active" value="Update"/>
                        </div>
                       </td> 
                       
            </form>
            <td>           
            <div>
                <form method="post" action="/list_tasks/<%= task.taskId %>?_method=DELETE">
                    <input type="submit" class="btn btn-primary active" value="Delete  "/>
                </form>
            </div>
            </td>
</tr> 
            <% })%>
    </table>
    </tbody>
 
   <% if(typeof msg != 'undefined') { %> <h2><%= msg %></h2> <% } %>

<footer class="w3-container w3-padding-64 w3-center w3-opacity">  
  <div class="w3-xlarge w3-padding-32">
    <i class="fa fa-facebook-official w3-hover-opacity"></i>
    <i class="fa fa-instagram w3-hover-opacity"></i>
    <i class="fa fa-snapchat w3-hover-opacity"></i>
    <i class="fa fa-pinterest-p w3-hover-opacity"></i>
    <i class="fa fa-twitter w3-hover-opacity"></i>
    <i class="fa fa-linkedin w3-hover-opacity"></i>
</div>
<p>Created by Jane Quintos</a></p>
</footer>
</body>
</html>